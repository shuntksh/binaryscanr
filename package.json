{
  "name": "binaryscanr",
  "version": "0.1.1",
  "description": "A Tcl Binary Scan Tester",
  "main": "index.js",
  "scripts": {
    "compile": "npm run clean && npm run prebuild:css && npm run client && npm run server && npm run cp",
    "client": "cross-env NODE_ENV=production webpack --config webpack.client.js",
    "server": "cross-env NODE_ENV=production webpack --config webpack.server.js",
    "compile:dev": "npm run dev:client && npm run dev:server",
    "dev:client": "cross-env NODE_ENV=development webpack -d --config webpack.client.js",
    "dev:server": "cross-env NODE_ENV=development webpack -d --config webpack.server.js",
    "check": "npm run npm-check && npm run nsp",
    "clean": "rimraf ./build",
    "cp": "mkdirp build/static && ncp client/assets build/static/assets",
    "prebuild:css": "tcm --pattern ./client/**/*.css --camelCase",
    "npm-check": "npm-check --skip-unused",
    "nsp": "nsp check",
    "server:start": "forever start --minUptime 1000 --spinSleepTime 1000 -l ./server.log -a ./index.js",
    "server:restart": "forever restart index.js",
    "server:stop": "forever stop index.js",
    "start": "cross-env NODE_ENV=development concurrently --kill-others --raw \"npm run prebuild:css -- --watch\" \"npm run dev-server\"",
    "dev-server": "webpack-dev-server --hot --inline --config webpack.client.js",
    "test": "mocha -r ts-node/register './client/**/*.spec.*'",
    "watch": "cross-env NODE_ENV=development concurrently --kill-others --raw \"npm run prebuild:css -- --watch\" \"npm run watch:client\" \"npm run watch:server\"",
    "watch:client": "webpack --watch --config webpack.client.js",
    "watch:server": "webpack --watch --config webpack.server.js"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com-pub:shuntksh/binaryscanr.git"
  },
  "author": "Shun Takahashi (@shuntksh)",
  "license": "MIT",
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "declaration-block-no-redundant-longhand-properties": true,
      "declaration-block-no-shorthand-property-overrides": true,
      "custom-property-empty-line-before": [
        "never"
      ],
      "selector-pseudo-class-no-unknown": [
        true,
        {
          "ignorePseudoClasses": [
            "local",
            "global"
          ]
        }
      ]
    }
  },
  "dependencies": {
    "axios": "^0.18.0",
    "body-parser": "^1.18.2",
    "classnames": "2.2.5",
    "compression": "^1.7.1",
    "cookie-parser": "1.4.3",
    "csurf": "1.9.0",
    "express": "^4.16.2",
    "forever": "0.15.3",
    "helmet": "^3.9.0",
    "immutable": "^3.8.2",
    "lodash.throttle": "4.1.1",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-redux": "^5.0.6",
    "redux": "^3.7.2",
    "serve-static": "^1.13.1",
    "strong-cluster-control": "2.2.3"
  },
  "devDependencies": {
    "@types/body-parser": "^1.16.8",
    "@types/chai": "^4.1.0",
    "@types/classnames": "^2.2.3",
    "@types/compression": "0.0.35",
    "@types/cookie-parser": "^1.4.1",
    "@types/csurf": "^1.9.35",
    "@types/express": "^4.11.0",
    "@types/helmet": "0.0.37",
    "@types/lodash.throttle": "^4.1.3",
    "@types/mocha": "^2.2.46",
    "@types/node": "^9.3.0",
    "@types/path-exists": "^3.0.0",
    "@types/react": "^16.0.34",
    "@types/react-addons-test-utils": "^0.14.20",
    "@types/react-dom": "^16.0.3",
    "@types/react-redux": "^5.0.14",
    "@types/serve-static": "^1.13.1",
    "@types/strong-cluster-control": "^2.2.3",
    "awesome-typescript-loader": "^3.4.1",
    "chai": "^4.1.2",
    "concurrently": "^3.5.1",
    "cross-env": "^5.1.3",
    "css-loader": "^0.28.8",
    "cssnano": "3.10.0",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.6",
    "html-webpack-plugin": "^2.30.1",
    "mkdirp": "0.5.1",
    "mocha": "^5.0.0",
    "ncp": "2.0.0",
    "npm-check": "^5.5.2",
    "nsp": "^3.1.0",
    "postcss-cssnext": "^3.0.2",
    "postcss-loader": "^2.0.10",
    "postcss-reporter": "^5.0.0",
    "react-dev-utils": "^5.0.0",
    "react-hot-loader": "^3.1.3",
    "rimraf": "^2.6.2",
    "style-loader": "^0.19.1",
    "stylelint": "^9.0.0",
    "stylelint-config-standard": "^18.0.0",
    "ts-node": "^5.0.0",
    "tslint": "^5.9.1",
    "tslint-loader": "3.5.3",
    "tslint-react": "^3.4.0",
    "typed-css-modules": "^0.3.1",
    "typescript": "^2.6.2",
    "url-loader": "^0.6.2",
    "webpack": "^4.36.1",
    "webpack-dev-server": "^2.11.0"
  }
}
