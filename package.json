{
  "name": "binaryscanr",
  "version": "0.1.1",
  "description": "A Tcl Binary Scan Tester",
  "main": "index.js",
  "scripts": {
    "build": "npm run clean && npm run prebuild:css && npm run build:client && npm run build:server && npm run cp",
    "build:client": "cross-env NODE_ENV=production webpack --config webpack.client.js",
    "build:server": "cross-env NODE_ENV=production webpack --config webpack.server.js",
    "dev:build": "npm run dev:build:client && npm run dev:build:server",
    "dev:build:client": "cross-env NODE_ENV=development webpack -d --config webpack.client.js",
    "dev:build:server": "cross-env NODE_ENV=development webpack -d --config webpack.server.js",
    "check": "npm run npm-check && npm run nsp",
    "clean": "rimraf ./build",
    "cp": "mkdirp build/static && ncp client/assets build/static/assets",
    "prebuild:css": "tcm --pattern ./client/**/*.css --camelCase",
    "npm-check": "npm-check --skip-unused",
    "nsp": "nsp check",
    "server:start": "forever start --minUptime 1000 --spinSleepTime 1000 -l ./server.log -a ./index.js",
    "server:restart": "forever restart index.js",
    "server:stop": "forever stop index.js",
    "start": "cross-env NODE_ENV=development concurrently --kill-others --raw \"npm run prebuild:css -- --watch\" \"npm run start:dev-server\"",
    "start:dev-server": "webpack-dev-server --hot --inline --config webpack.client.js",
    "test": "mocha -r ts-node/register './client/**/*.spec.*'",
    "watch": "cross-env NODE_ENV=development concurrently --kill-others --raw \"npm run prebuild:css -- --watch\" \"npm run watch:client\" \"npm run watch:server\"",
    "watch:client": "webpack --watch --config webpack.client.js",
    "watch:server": "webpack --watch --config webpack.server.js"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com-pub:shuntksh/binaryscanr.git"
  },
  "author": "Shun Takahashi (@shuntksh)",
  "license": "MIT",
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "custom-property-empty-line-before": [
        "never"
      ],
      "selector-pseudo-class-no-unknown": [
        true,
        {
          "ignorePseudoClasses": [
            "local",
            "global"
          ]
        }
      ]
    }
  },
  "dependencies": {
    "axios": "0.16.1",
    "body-parser": "1.17.1",
    "compression": "1.6.2",
    "cookie-parser": "1.4.3",
    "csurf": "1.9.0",
    "express": "4.15.2",
    "forever": "0.15.3",
    "helmet": "3.5.0",
    "serve-static": "1.12.1",
    "strong-cluster-control": "2.2.3"
  },
  "devDependencies": {
    "@types/body-parser": "1.16.3",
    "@types/chai": "3.5.1",
    "@types/classnames": "0.0.32",
    "@types/compression": "0.0.33",
    "@types/cookie-parser": "1.3.30",
    "@types/csurf": "1.9.33",
    "@types/express": "4.0.35",
    "@types/helmet": "0.0.34",
    "@types/lodash.throttle": "4.1.2",
    "@types/mocha": "2.2.40",
    "@types/node": "7.0.12",
    "@types/path-exists": "1.0.29",
    "@types/react": "15.0.21",
    "@types/react-addons-test-utils": "0.14.17",
    "@types/react-dom": "0.14.23",
    "@types/react-redux": "4.4.38",
    "@types/serve-static": "1.7.31",
    "@types/strong-cluster-control": "2.2.2",
    "awesome-typescript-loader": "3.1.2",
    "chai": "3.5.0",
    "classnames": "2.2.5",
    "concurrently": "3.4.0",
    "cross-env": "4.0.0",
    "css-loader": "0.28.0",
    "cssnano": "3.10.0",
    "extract-text-webpack-plugin": "2.1.0",
    "file-loader": "0.11.1",
    "html-webpack-plugin": "2.28.0",
    "immutable": "3.8.1",
    "lodash.throttle": "4.1.1",
    "mkdirp": "0.5.1",
    "mocha": "3.2.0",
    "ncp": "2.0.0",
    "npm-check": "5.4.0",
    "nsp": "2.6.3",
    "postcss-cssnext": "2.10.0",
    "postcss-loader": "1.3.3",
    "postcss-reporter": "3.0.0",
    "react": "15.5.4",
    "react-addons-test-utils": "15.5.1",
    "react-dev-utils": "0.5.2",
    "react-dom": "15.5.4",
    "react-hot-loader": "1.3.1",
    "react-redux": "5.0.4",
    "redux": "3.6.0",
    "rimraf": "2.6.1",
    "style-loader": "0.16.1",
    "stylelint": "7.10.1",
    "stylelint-config-standard": "16.0.0",
    "ts-node": "3.0.2",
    "tslint": "5.1.0",
    "tslint-loader": "3.5.2",
    "tslint-react": "2.5.0",
    "typed-css-modules": "0.2.0",
    "typescript": "2.2.2",
    "url-loader": "0.5.8",
    "webpack": "2.4.1",
    "webpack-dev-server": "2.4.2"
  }
}
